<p id="notice"><%= notice %></p>
<nav class="navbar">
  <h1>Photos</h1>
  <%= link_to 'Home', root_path %>
</nav>

<table>
  <thead>
    <tr>
      <th>Image data</th>
      <th>User</th>
      <th>Description</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @photos.each do |photo| %>
      <tr>
        <td><%= link_to (image_tag photo.image.url), photo %></td>
        <td><%= photo.user.email %></td>
        <td><%= photo.description %></td>
        <td>
        <%= link_to 'Edit', edit_photo_path(photo) %> | 
        <%= link_to 'Delete', photo, method: :delete, data: { confirm: 'Are you sure you want to delete this photo?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Photo', new_photo_path %>
